<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thedeveloperworldisyours.unitconverterpro.fragment.CurrencyFragment">

    <ProgressBar
        android:id="@+id/fragment_currency_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_currency_pound_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CurrencyTextInPutLayout">

        <com.thedeveloperworldisyours.unitconverterpro.common.view.EditText_Lota_Regular
            android:id="@+id/fragment_currency_pound_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_currency_line_edit_text"
            android:hint="@string/currency_pound_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_currency_dollar_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_currency_pound_input_layout"
        android:theme="@style/CurrencyTextInPutLayout">

        <com.thedeveloperworldisyours.unitconverterpro.common.view.EditText_Lota_Regular
            android:id="@+id/fragment_currency_dollar_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_currency_line_edit_text"
            android:hint="@string/currency_dollar_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_currency_euro_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_currency_dollar_input_layout"
        android:theme="@style/CurrencyTextInPutLayout">

        <com.thedeveloperworldisyours.unitconverterpro.common.view.EditText_Lota_Regular
            android:id="@+id/fragment_currency_euro_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_currency_line_edit_text"
            android:hint="@string/currency_euro_hint" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
